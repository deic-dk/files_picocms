<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8" />

    <title>Search results</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}">
    {% endif %}{% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}">
    {% endif %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ theme_url }}/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ theme_url }}/css/clean-blog.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ theme_url }}/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
  </head>

 <body>

     <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
      <a class="navbar-brand navbar-right" href="{{ base_url }}">Home</a>
    </nav>

    <header class="intro-header" style="{% if meta.img %}background-image:  url({{ meta.img }})
    {% else %}background: #006286;{% endif %};">
			<div class="site-heading" style="color: gray;">
				<div class="span2 navigation">
					<form id="search_form" action="{{ base_url  }}/search">
						<input type="search" id="search_input" name="q" placeholder="Search" />
						<!--<input type="submit" id="search_submit" value="Search" />-->
					</form>
					<script type="text/javascript">
							// Intercept form submit and go to the search results page directly, avoiding a redirect
							document.getElementById('search_form').addEventListener('submit', function (e) {
									var search_terms = document.getElementById('search_input').value;
									location.href = '{{ base_url  }}/search/' + encodeURIComponent(search_terms);
									e.preventDefault();
							});
					</script>
				</div>
			</div>
    </header>

    <div class="container-fluid">
    <div class="row-fluid">
			<div class="span9 main">
				{% for page in pages | reverse %}
					<div class="search_result">
						<h2><a href="{{ page.url }}">{{ page.title }}</a></h2>
						{% if page.description %}<p>{{ page.description }}</p>{% endif %}
					</div>
				{% endfor %} 
			</div>
		</div>
	</div>

</body>
</html>