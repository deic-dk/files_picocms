<!DOCTYPE html>
<html lang="en">

<head data-requesttoken="{{ config.requesttoken }}">

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ meta.description|striptags }}">

    <title>{{ meta.title }} - {{ site_title }}</title>
	<meta content='{{ meta.title }}' property='og:title'/>
	<meta content='article' property='og:type'/>
	<meta content='{{ current_page.url }}' property='og:url'/>
	<meta content='{% if meta.img %}{{ meta.img }}{% else %}{{ theme_url }}/img/iceberg.png{% endif %}' property='og:image'/>
	<meta content='{{ meta.description|striptags }}' property='og:description'/>
	<meta content='{{ site_title }}' property='og:site_name'/>
	<meta content='en_US' property='og:locale'/>
	<meta content='summary_large_image' name='twitter:card'/>
	<meta content='{{ meta.title }}' name='twitter:title'/>
	<meta content='{{ meta.description|striptags }}' name='twitter:description'/>
	<meta content='{% if meta.img %}{{ meta.img }}{% else %}{{ theme_url }}/img/iceberg.png{% endif %}' name='twitter:image'/>
    <!-- Bootstrap Core CSS -->
    <link href="{{ theme_url }}/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ theme_url }}/css/clean-blog.css" rel="stylesheet">
    <link href="{{ theme_url }}/css/modal-images.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ theme_url }}/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

