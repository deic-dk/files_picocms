    <script src="/themes/deic_theme_oc7/core/js/avatar.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/placeholder.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/3rdparty/js/md5/md5.min.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/bootstrap.min.js"></script>
    <script src="{{ theme_url }}/js/clean-blog.js"></script>
    <script src="/apps/files_markdown/js/mathjax/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            {% set num_pages = paged_pages|length %}
            {% if num_pages>0 %}
            <div class="navbar-header page-scroll">
                <a class="navbar-brand-post" href="{{ base_url }}">Home</a>
            </div>
            {% endif %}

            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="post-header">
			{% if has_search_page %}
			<div id="displayavatar">
 				<a href="{{ base_url }}/search/author:{{ meta.author }}">
					<div class="avatardiv" author="{{ meta.author }}"></div>
				</a>
			</div>
			{% endif %}
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ meta.title }}</h1>
                        <h2 class="subheading">{{ meta.description }}</h2>
												{% if has_search_page %}
                        <span class="meta">Posted by <a href="{{ base_url }}/search/author:{{ meta.author }}">{{ meta.displayname }}</a> on {{ meta.date }}</span>
												{% endif %}
                    </div>
                </div>
            </div>
        </div>
        <button class="edit-button btn btn-primary btn-flat" path="{{ oc_path }}"
        dir_id="{{ oc_parent_id }}" id="{{ oc_id }}"
        {% if (meta.access == 'public' or meta.permissions == 'none') and
        (oc_user is not defined  or oc_owner is not defined or oc_owner != oc_user) %}
        	style="display:none;"
        {% endif %}
        user="{{ oc_user }}" owner="{{ oc_owner }}" group="{{ oc_group }}"
         host="{{ oc_user_home_url }}">Show file</button>
    </header>
    
    <hr class="small">

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
					{{ content }}
                </div>
            </div>
        </div>
    </article>
    
      <div class="col-lg-8">
        <a id="show_comments">Comments <span class="laquo">&laquo;</span><span class="raquo">&raquo;</span></a>
      </div>

    <comments>
    <div class="container">
	    <div class="col-lg-offset-2">
		    <div class="form-group col-xs-5 comment-post"
		    share="{{  oc_share }}" path="{{  oc_path }}" owner="{{  oc_owner }}" user="{{  oc_user }}"
		    group="{{  oc_group }}">
		     <input placeholder="Your name" type="text" class="form-control" id="name" size="64" value="{{ oc_full_name }}" />
		     <textarea placeholder="Your comment" class="form-control" rows="3" id="comment"></textarea>
		     <button id="submit_comment" class="btn btn-default btn-small">Submit</button>
		    </div>
		
		    <!-- Comments -->
		    <div id="comments" class="col-md-10">
		    </div>
		  </div>
	  </div>
    </comments>
    
    <p />
    <hr class="foot">

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="https://twitter.com/home?status={{ current_page.url }}" target="_blank" rel="noopener noreferrer">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{ current_page.url }}" target="_blank" rel="noopener noreferrer">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ current_page.url }}" target="_blank" rel="noopener noreferrer">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; {{ site_title }} {{ "now"|date("Y") }}</p>
                </div>
            </div>
        </div>
    </footer>

	<script type="text/x-mathjax-config">
		MathJax.Hub.Config({
			tex2jax: {ignoreClass: 'ace_content',  inlineMath: [['$','$'], ['\\(','\\)']] },
			TeX: {extensions: ['mhchem.js']}
		});
	</script>
	<script src="/apps/files_markdown/js/mathjax/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>

</body>

</html>
