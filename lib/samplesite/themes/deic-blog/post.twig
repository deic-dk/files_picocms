    <script src="/core/js/jquery.avatar.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/themes/deic_theme_oc7/core/js/jquery.ocdialog.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/themes/deic_theme_oc7/core/js/oc-dialogs.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/jquery-showpassword.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/placeholders.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
