    <script src="/themes/deic_theme_oc7/core/js/avatar.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/placeholder.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/3rdparty/js/md5/md5.min.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/bootstrap.min.js"></script>
    <script src="{{ theme_url }}/js/clean-blog.js"></script> 
</head>

<body>
	<!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
						{% if page_number > 1 %}
							<div class="navbar-header page-scroll">
									<a class="navbar-brand" href="{{ base_url }}">Home</a>
							</div>
						{% endif %}
            <!-- /.navbar-collapse -->
            {% if has_search_page %}
							<form class = "navbar-search" id="search_form" action="{{ base_url  }}/search">
								<input type="search" id="search_input" name="q" placeholder="Search" />
								<!--<input type="submit" id="search_submit" value="Search" />-->
							</form>
							<div class="navbar-header page-scroll navbar-right">
									<a class="navbar-brand search" href="{{ base_url }}/search">Search</a>
							</div>
						{% endif %}
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: {% if meta.img %} url({{ meta.img }}) {% else %} url('{{ theme_url }}/img/home.jpg'){% endif %};">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1><a href="{{ base_url }}">{{ site_title }}</a></h1>
                        <hr class="thin">
                        <span class="subheading">{{ meta.tagline }}</span>
                    </div>
                </div>
            </div>
        </div>
        
        
        {% if meta.access == 'private' and meta.permissions != 'none' %}
            <a class="navbar-left write-post" share="{{  oc_share }}" path="{{  oc_path }}" owner="{{  oc_owner }}" user="{{  oc_user }}" group="{{  oc_group }}">Write</a>
            <input type="search" id="write_post" name="q" placeholder="Title" />
        {% endif %}
        
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {% set num_pages = paged_pages|length %}
      {% set i = 0 %}
			{% for page in paged_pages|sort_by("time")|reverse %}
      {% set i = i + 1 %}
				<div class="post-preview">
									{% if has_search_page %}
                   <a href="{{ base_url }}/search/author:{{ page.author }}"><div class="avatardiv" author="{{ page.author }}"></div></a><a href="{{ page.url }}">
                  {% endif %}
                        <h2 class="post-title">
							{{ page.title }}
                        </h2>
                        <h3 class="post-subtitle">
							{{ page.description }}
                        </h3>
                    </a>
                    {% if num_pages>1 %}
                    <p class="post-meta">Posted by {{ page.meta.displayname }} on {{ page.date }}</p>
                    {% endif %} 
                </div>
							{% if i < num_pages %}
                <hr>
							{% endif %}
            {% endfor %}
                <!-- Pager -->
                <ul class="pager">
					{% if page_number > 1 %}
					<li class="previous">
                        <a href="{{ base_url }}/{{ page_indicator }}/{{ page_number - 1 }}">&larr; Newer Posts</a>
                    </li>
					{% endif %}
					
					{% if page_number < total_pages %} 
                    <li class="next">
                        <a href="{{ base_url }}/{{ page_indicator }}/{{ page_number + 1 }}">Older Posts &rarr;</a>
                    </li>
					{% endif %}
                </ul>
            </div>
        </div>
    </div>

    <hr>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
					{% for link,icon in meta.social %}
                        <li>
                            <a href="{{ link }}" target="_blank" rel="noopener noreferrer">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-{{ icon }} fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
					{% endfor %}
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; {{ site_title }} {{ "now"|date("Y") }}</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>