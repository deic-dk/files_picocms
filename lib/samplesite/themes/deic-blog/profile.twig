<!DOCTYPE html>
<html lang="en">

<head data-requesttoken="{{ config.requesttoken }}">

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ meta.description|striptags }}">

    <title>{{ meta.title }} - {{ site_title }}</title>
	<!-- [ Social Media Meta Tags ] -->
	<meta content='{{ meta.title }}' property='og:title'/>
	<meta content='article' property='og:type'/>
	<meta content='{{ config.facebook }}' property='article:publisher'/>
	<meta content='{{ config.facebook }}' property='article:author'/>
	<meta content='{{ current_page.url }}' property='og:url'/>
	<meta content='{% if meta.img %}{{ meta.img }}{% else %}{{ theme_url }}/img/iceberg.png{% endif %}' property='og:image'/>
	<meta content='{{ meta.description|striptags }}' property='og:description'/>
	<meta content='{{ site_title }}' property='og:site_name'/>
	<meta content='en_US' property='og:locale'/>
	<meta content='summary_large_image' name='twitter:card'/>
	<meta content='{{ meta.title }}' name='twitter:title'/>
	<meta content='{{ config.twitter }}' name='twitter:site'/>
	<meta content='{{ config.twitter }}' name='twitter:creator'/>
	<meta content='{{ meta.description|striptags }}' name='twitter:description'/>
	<meta content='{% if meta.img %}{{ meta.img }}{% else %}{{ theme_url }}/img/iceberg.png{% endif %}' name='twitter:image'/>
    <!-- Bootstrap Core CSS -->
    <link href="{{ theme_url }}/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ theme_url }}/css/clean-blog.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ theme_url }}/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="/apps/files_markdown/js/mathjax/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
    <script src="/core/js/jquery-1.10.0.min.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
		<script src="/core/js/jquery-migrate-1.2.1.min.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
		<script src="/core/js/jquery-ui-1.10.0.custom.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
		<script src="/core/js/underscore.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/jquery.avatar.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/themes/deic_theme_oc7/core/js/jquery.ocdialog.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/themes/deic_theme_oc7/core/js/oc-dialogs.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/jquery-showpassword.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/placeholders.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
		<script src="/core/js/jquery-tipsy.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
		<script src="/core/js/compatibility.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/themes/deic_theme_oc7/core/js/js.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/themes/deic_theme_oc7/core/js/avatar.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/core/js/placeholder.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="/3rdparty/js/md5/md5.min.js?v=cf866614b6b18cda13fe699a3a65661b" type="text/javascript"></script>
    <script src="{{ theme_url }}/js/bootstrap.min.js"></script>
    <script src="{{ theme_url }}/js/clean-blog.js"></script>
    <script src="/apps/files_markdown/js/mathjax/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>

</head>

<body>

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="post-header profile-header">
    
			{% if has_search_page %}
			<div id="displayavatar">
				<a href="{{ base_url }}/search/author:{{ meta.author }}">
					<div class="avatardiv" author="{{ meta.author }}"></div>
				</a>
			</div>
			{% endif %}
        <div class="container">
            <div class="row col-md-offset-1">
                    <div class="post-heading">
                        <h1 class="displayname">{{ meta.displayname }}</h1>
                        <!--<h2 class="subheading">{{ meta.description }}</h2>
								        <div class="social">
									        {% for social in meta.social %}
									            <a href="{{ social.url }}" title="{{ social.title }}"><span class="fa fa-{{ social.icon }}"></span></a>
									        {% endfor %}
								    		</div>-->
                    </div>
            </div>
        </div>

        {% if meta.access == 'private' and meta.permissions != 'none' %}
            <button class="edit-button btn btn-primary btn-flat" path="{{ oc_path }}"
            dir_id="{{ oc_parent_id }}" user="{{ oc_user }}" owner="{{ oc_owner }}"
            group="{{ oc_group }}">Show file</button>
        {% endif %}
        
        {% if num_pages > 1 %}
	        <div class="home-link">
	                <a class="navbar-brand-post" href="{{ base_url }}">Home</a>
	        </div>
        {% endif %}
        
    </header>
    
    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-1 col-md-10 col-md-offset-1">
									{{ content }}
                </div>
            </div>
        </div>
    </article>
    
	    <p />
			<hr class="foot">

      <div class="col-lg-8">
        <a id="show_comments">Comments <span class="laquo">&laquo;</span><span class="raquo">&raquo;</span></a>
      </div>
      
    <comments>
    <div class="container">
	    <div class="col-lg-offset-1">
		    <div class="form-group col-xs-5 comment-post"
		    share="{{  oc_share }}" path="{{  oc_path }}" owner="{{  oc_owner }}" user="{{  oc_user }}"
		    group="{{  oc_group }}">
		     <input placeholder="Your name" type="text" class="form-control" id="name" size="64" value="{{ oc_full_name }}" />
		     <textarea placeholder="Your comment" class="form-control" rows="3" id="comment"></textarea>
		     <button id="submit_comment" class="btn btn-default btn-small">Submit</button>
		    </div>
		
		    <!-- Comments -->
		    <div id="comments" class="col-md-10">
		    </div>
		  </div>
	  </div>
    </comments>
    
</body>

</html>
