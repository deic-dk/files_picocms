{% set iseditable = '' %}
{% if editable is not empty and not current_page.id is empty %}
{% set iseditable = 'yes' %}
{% endif %}

<body>

	<!-- Navigation -->
	<nav class="navbar navbar-default navbar-custom navbar-fixed-top">
		<div class="container-fluid page-nav">
			<span class="nav">
				<a id="home" title="Home" href="{{ base_url }}"><img alt="Home" src="{% if current_page.meta.icon %}{{ meta.icon }}{% else %}{{ base_url }}/img/icon.png{% endif %}" class="icon" /></a>
			</span>
		</div>
		<div class="icon nav menu" title="Folders"><i class="fa fa-bars"></i></div>
		<div class="icon nav labels" title="Labels"><i class="fas fa-tags"></i></div>
		{% if has_search_page %}
			<form class = "navbar-search" id="search_form" action="{{ base_url }}/search">
				<input type="search" id="search_input" name="q" placeholder="Search" />
			</form>
		{% endif %}
		{% if iseditable is not empty %}
			<div class="write-post" share="{{ oc_share }}" path="{{ oc_path }}"
				dir_id="{{ oc_parent_id }}" id="{{ oc_id }}" owner="{{ oc_owner }}" user="{{ oc_user }}"
				user_home_url="{{ oc_user_home_url }}" group="{{ oc_group }}" title="Create new page">
				<img class="icon" src="{{ theme_url }}/img/new-document.png" />
			</div>
			<input type="search" id="write_post" name="q" placeholder="Title" />
			<input id="upload_file" type="file">
			<div class="upload" share="{{ oc_share }}" path="{{ oc_path }}"
				dir_id="{{ oc_parent_id }}" id="{{ oc_id }}" owner="{{  oc_owner }}" user="{{ oc_user }}"
				user_home_url="{{ oc_user_home_url }}"  group="{{  oc_group }}" title="Upload file">
				<img class="icon" src="{{ theme_url }}/img/upload.png" />
			</div>
		{% endif %}
	</nav>

	<ul class="leftbar">
		{% if iseditable is not empty %}
			<button id="manage_files">Manage</button>
		{% endif %}
		{% for fol in found_folders|sort %}
		{% if fol != "/" %}
			{% set depth = fol | split('/') | length -1 %}
			{% set name = (fol | split('/'))[ depth - 1 ] %}
				<li class="toc toc{{ depth }} nav{% if fol == current_page.folder %} active{% endif %}">
						<a href="{{ base_url  }}/{{ fol }}?index=1">{{ name}}/</a>
				</li>
		{% endif %}
		{% endfor %}
	</ul>

	<ul class="labelsbar">
		{% for label in labels|sort %}
			{% set label = label|trim %}
			<li class="nav">
				<a href="{{ base_url }}/search/labels:{{ label }}">{{ label }}</a>
			</li>
		{% endfor %}
	</ul>

	{% if iseditable is not empty and not current_page.id is empty %}
		<button title="Edit page" class="edit-button float-button"
		path="{{ oc_path }}{% if current_page.id ends with 'index' and oc_path ends with '/' %}index.md{% endif %}"
		dir_id="{{ oc_parent_id }}" id="{{ oc_id }}" 
		user="{{ oc_user }}" user_home_url="{{ oc_user_home_url }}" owner="{{ oc_owner }}"
		group="{{ oc_group }}"><i class="fa fa-pencil-alt"></i></button>
	{% endif %}

	{% if current_page.folder != "/" %}
		<button title="Parent" class="parent-button float-button">..</button>
	{% endif %}

	<!-- Main Content -->
	<div class="container viewcontainer">
		<div class="row">
			<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">

				{% if meta.labels and has_search_page %}
					<div class="labels">
						{% set mylabels = meta.labels|split(',') %}
						{% for label in mylabels %}
							{% set label = label|trim %}
							<a href="{{ base_url }}/search/labels:{{ label }}"><span class="label">{{ label }}</span></a>
						{% endfor %}
					</div>
				{% endif %}

				{{ content }}

				<!-- File editor -->
				<div id="content"><div id="controls"><div id="notification"></div></div></div>
				<!-- Generate index. -->
				{% if readable is not empty %}
					<div id="contents">
						<!-- Contents of {{ current_page.folder }} -->
						<ul>
							{% for file in contents | sort %}
							{% if file != '403.md' and file != '404.md' and file != 'search.md' and file != 'img/' or
									current_page.folder != '/' %}
								<li>
									{% if file ends with '.png' or file ends with '.jpg' or file ends with '.gif' or file ends with '.mp4' %}
										<a href="{{ file }}">{{ file }}</a>&nbsp;<a href="{{ file }}" class="modal-image" src="{{ file }}"><i class="fas fa-eye"></i></a>
									{% else %}
										<a href="{{ file }}">{{ file }}</a>
									{% endif %}
								</li>
							{% endif %}
							{% endfor %}
						</ul>
					</div>
				{% endif %}

				</div>
			</div>
		</div>

		<hr>

		<!-- Footer -->
		<footer>
			<div class="container">
				<div class="row">
					<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
						<ul class="list-inline text-center">
						{% for link,icon in meta.social %}
							<li>
								<a href="{{ link }}" target="_blank" rel="noopener noreferrer">
									<span class="fa-stack fa-lg">
										<i class="fa fa-circle fa-stack-2x"></i>
										<i class="fab fa-{{ icon }} fa-stack-1x fa-inverse"></i>
									</span>
								</a>
							</li>
						{% endfor %}
						</ul>
						<p class="copyright text-muted">Copyright &copy; {{ site_title }} {{ "now"|date("Y") }}</p>
					</div>
				</div>
			</div>
		</footer>
</body>
