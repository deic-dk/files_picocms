<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>

	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>

	<charset>utf8</charset>

	<table>

		<name>*dbprefix*files_picocms</name>

		<declaration>

			<field>
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
				<autoincrement>1</autoincrement>
				<length>12</length>
			</field>

			<field>
				<name>uid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>

			<field>
				<name>site</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>

			<field>
				<name>path</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>255</length>
			</field>

			<field>
				<name>gid</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			
		</declaration>

	</table>	

</database>
